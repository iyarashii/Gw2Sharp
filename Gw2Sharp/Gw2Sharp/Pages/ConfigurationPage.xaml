<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gw2Sharp.Pages.ConfigurationPage"
             Title="Settings">
    <ContentPage.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS" Value="20, 40, 20, 20" />
                <On Platform="Android, UWP" Value="20" />
            </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Button x:Name="saveItemDB" Text="Save item name and id list" Clicked="OnSaveItemDB" />
                <Button x:Name="stopButton" Text="Stop" IsEnabled="False" Clicked="OnStopButton"/>
                <Button x:Name="deleteItemDB" Text="Delete local database" Clicked="OnDeleteItemDB" />
                <Label x:Name="statusText" Text=""/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>