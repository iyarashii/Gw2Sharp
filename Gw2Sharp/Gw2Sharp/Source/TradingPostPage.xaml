<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gw2Sharp.TradingPostPage"
             Title="Trading Post">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter item name to check its Trading Post price:"/>
            <Entry x:Name="itemName" Text="" />
            <Button x:Name="showItem" Text="Show item details" Clicked="OnShowItem" />
            <StackLayout Spacing="0">
                <Label x:Name="iconText" Text="Icon:" IsVisible="False"/>
                <StackLayout x:Name="responseTextLayout" Spacing="0" IsVisible="False">
                    <Image x:Name="apiIcon" Source="{Binding ItemIconLink}" HorizontalOptions="Start"/>
                    <Label x:Name="itemDetailsText" Text="{Binding ItemDetailsText}" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>