<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gw2Sharp.GemExchangePage"
             Title="Gem Exchange">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>            
            <Label Text="Enter amount of gold you want to know the gem exchange ratio for:" />
            <Entry x:Name="goldAmount" Text="" />
            <Button x:Name="calculateGoldToGem" Text="Calculate gold to gem price" Clicked="OnCalculateGoldToGems" />
            <Label Text="{Binding GemInfo}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>